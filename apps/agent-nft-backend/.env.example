# Server Configuration
PORT=3000
NODE_ENV=development

# Ethereum Network Configuration
RPC_URL=https://evmrpc-testnet.0g.ai
CHAIN_ID=16600
NETWORK_NAME=0g-testnet

# Contract Addresses (Update with your deployed contracts)
AGENT_NFT_ADDRESS=0x1234567890abcdef1234567890abcdef12345678
VERIFIER_ADDRESS=0xabcdef1234567890abcdef1234567890abcdef12

# Private Key (for backend operations - be careful!)
PRIVATE_KEY=your_private_key_here

# Storage Configuration
STORAGE_TYPE=local
# For ZG Storage (Indexer URL - update with actual URL)
ZG_INDEXER_URL=https://indexer-testnet.0g.ai
# For Local Storage
LOCAL_STORAGE_PATH=./temp/local-storage

# API Configuration
API_RATE_LIMIT_WINDOW=15
API_RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration  
# Use * to allow all origins (for development only)
# CORS_ORIGIN=*
# Or specify multiple origins separated by comma
# CORS_ORIGIN=http://localhost:3000,http://localhost:3001,https://yourdomain.com
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info

ZKP_BUILD_DIR=../../build